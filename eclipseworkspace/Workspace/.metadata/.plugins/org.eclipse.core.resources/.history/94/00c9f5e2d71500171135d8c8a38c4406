				<tr>
					<td>生日<input name="bean.birthday"></td>
				</tr>
				<tr>
					<td>省<select name="bean.pid" id="pid" onchange="city(this.value)">
					<option>--请选择--</option>
						<c:forEach items="${list }" var="s">
							<option value="${s.pid }">${s.pname }</option>
						</c:forEach>
