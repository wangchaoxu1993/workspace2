<script type="text/javascript">
		function city(pid){
			$.post("Bean_clist.action",{pid:pid},function(obj){
				var html = "";
				for ( var i in obj) {
					html += "<option value='"+obj[i].cid+"'>"+obj[i].cname+"</option>";
				}
				$("#cid").html(html);
			},"json");
		}
</script>
